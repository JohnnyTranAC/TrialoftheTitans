<aura:component implements="forceCommunity:availableForAllPageTypes" controller="NewProjectCreationAuraController">
    <!--Attribute should be bound to attribute in parent component to determine which component is rendered-->
    <aura:attribute name="currentPage" type="String"/>
    
    <!--Lightning Notification Library to display errors and success toast-->
    <lightning:notificationsLibrary aura:id="componentNotif"/>
    <lightning:layout class="slds-align_absolute-center">
        <lightning:layoutItem class="slds-box">
            <lightning:input aura:id="nameInput" label="Project Name" required="true" maxlength="50" onblur="{!c.checkIfProjectExists}"/>
            <lightning:textarea aura:id="descInput" label="Project Description" maxlength="255"/>
            <lightning:buttonGroup class="slds-m-top_x-small">
                <lightning:button aura:id="cancelButton" label="Cancel" onclick="{!c.cancelNewProjectCreation}"/>
                <lightning:button aura:id="saveButton" label="Save" onclick="{!c.createNewProject}"/>
            </lightning:buttonGroup>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>	