<!-- meant to follow Diego's week selection component? -->

<aura:component controller="QCInterviewCohortSelectionAuraController">

    <!-- List of attributes -->
    <aura:attribute name="columns" type="List" />
    <aura:attribute name="heroList" type="Account[]" />
    <aura:attribute name="interviewList" type="QC_Interview__c[]" />

    <!-- Event handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:registerEvent name="finalInterviews" type="c:QCInterviewFinalized" />

    <!-- Datatable displaying a list of heroes available  -->
    <lightning:datatable keyField="id" 
                        data="{!v.heroList}" 
                        columns="{!v.columns}" 
                        onRowSelection="{!c.handleRowSelection}" 
                        hideCheckboxColumn="true"
                        suppressBottomBar="true" />


</aura:component>	
