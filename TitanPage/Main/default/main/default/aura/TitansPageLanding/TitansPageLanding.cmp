<aura:component>
    
    <!-- registerEvents, handlers, attributes go here -->
    <aura:registerEvent name="TitanPageLandingEvent" type="c:TitanPageLandingEvent"/>
    <aura:handler name="TitanPageLandingEvent" event="c:TitanPageLandingEvent" action="{!c.cNavigate}"/>
    <aura:registerEvent name="RenderSkillsExams" type="c:TitanPageRender"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    <!-- Header div -->
    <div class="slds-text-heading_large slds-align_absolute-center">
        <h5> Welcome Hero </h5>
    </div>
	
    <!-- Primary div  -->
    <div class="slds-grid slds-gutters" aura:id="account-info">
        <div class="slds-col slds-size_12-of-12">
            
            <!-- Contact information Component, allows the user to view their contact information -->
            <span> <div class="container slds-m-around_large" id="contactinfo">
                <lightning:card title="Heroes Name" iconName="standard:contact">
                    
                    <!-- Buttons select which Titan to display details for  -->
                    <div class="slds-grid">
                        <ul>
                            <li class="slds-text-heading_medium slds-col slds-size_12-of-12" onclick="{!c.cShowTitan1}"> 
                                Titan #1
                            </li><br/>   
                            <li class="slds-text-heading_medium slds-col slds-size_12-of-12" onclick="{!c.cShowTitan2}"> 
                                Titan #2
                            </li><br/>
                            <li class="slds-text-heading_medium slds-col slds-size_12-of-12" onclick="{!c.cShowTitan3}"> 
                                Titan #3 
                            </li><br/>
                            <li class="slds-text-heading_medium slds-col slds-size_12-of-12" onclick="{!c.cShowTitan4}"> 
                                Titan #4
                            </li><br/>
                        </ul>
                    </div>
                </lightning:card>
                </div></span>
        </div>
    </div>
    
    
	<!-- example Div style: class="slds-col slds-gutters slds-size_6-of-12" -->
    <!-- "toggle-hide" div CANNOT be inside lightning:card -->
    <!-- Uses "toggle-hide" class to switch displayed Titan details -->
    <div class="toggle-hide slds-col slds-gutters slds-size_6-of-12" aura:id="titanDiv1">
        <lightning:card>
            <c:ExamsLanding activeTitan="Titan 1 active"/>
            <c:LandingSkills activeTitan="Titan 1 active"/>
        </lightning:card>
    </div>
    <div class="toggle-hide slds-col slds-gutters slds-size_6-of-12" aura:id="titanDiv2">
        <lightning:card>        
            <c:ExamsLanding activeTitan="Titan 2 active"/>
            <c:LandingSkills activeTitan="Titan 2 active"/>
        </lightning:card>
    </div>        
    <div class="toggle-hide slds-col slds-gutters slds-size_6-of-12" aura:id="titanDiv3">
        <lightning:card>        
            <c:ExamsLanding activeTitan="Titan 3 active"/>
            <c:LandingSkills activeTitan="Titan 3 active"/>
        </lightning:card>    
    </div>
    <div class="toggle-hide slds-col slds-gutters slds-size_6-of-12" aura:id="titanDiv4">
        <lightning:card>        
            <c:ExamsLanding activeTitan="Titan 4 active"/>
            <c:LandingSkills activeTitan="Titan 4 active"/>
        </lightning:card>
    </div>
</aura:component>